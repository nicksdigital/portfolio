{
  "name": "portfolio-server",
  "version": "1.0.0",
  "description": "Backend server for portfolio site with layered blog",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "db:migrate": "tsx src/db/migrate.ts",
    "db:seed": "tsx src/db/seed.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest src/tests/unit/auth.test.ts src/tests/unit/jwt.test.ts src/tests/unit/websocket.test.ts",
    "test:integration": "jest src/tests/integration",
    "test:e2e": "jest src/tests/e2e",
    "test:all": "jest src/tests/unit src/tests/integration src/tests/e2e",
    "test:simple": "jest src/tests/simpleTests"
  },
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "drizzle-kit": "^0.31.0",
    "drizzle-orm": "^0.42.0",
    "drizzle-zod": "^0.7.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "postgres": "^3.4.5",
    "ws": "^8.14.2",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.4",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.6",
    "@types/pg": "^8.10.5",
    "@types/ws": "^8.5.6",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "eslint": "^8.51.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  }
}
